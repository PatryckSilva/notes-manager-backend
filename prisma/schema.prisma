generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  notes     Note[]
  folders   Folder[]

  @@map("users")
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("folders")
}

model Note {
  id        String   @id @default(uuid())
  title     String
  content   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  // A nota pode ou n√£o estar em uma pasta:
  folder    Folder?  @relation(fields: [folderId], references: [id])
  folderId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notes")
}
